<h1 class="description">Here you can add or change infromation about your company</h1>

<% if flash[:status] %>
  <div id="<%= flash[:status] =~ /Successfully/ ? "success_explanation" : "error_explanation" %>">
    <h2><%= flash[:status] %></h2>
  </div>
<% end %>

<%= form_with( local: true ) do |form| %>

  <div class="form-group-lg row text">
    <%= form.label "Company name" %>
    <%= form.text_field :name, value: @company ? @company.name : "" %>
  </div>

  <div class="form-group-lg row text">
    <%= form.label "Who are you looking for (vacancy)" %>
    <%= form.text_area :vacancy, value: @company ? @company.vacancy : "", class: "form-control" %>
  </div>

  <div class="form-group-lg row text">
    <%= form.label "Requirements" %>
    <%= form.text_area :requirements, value: @company ? @company.requirements : "", class: "form-control" %>
  </div>

  <div class="form-group-lg row text">
    <%= form.label "conditions" %>
    <%= form.text_area :conditions, value: @company ? @company.conditions : "", class: "form-control" %>
  </div>

  <div class="form-group-lg row text">
    <%= form.submit "Save", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
