<h1 class="welcome">Log in</h1>

<%= form_with(url: session_create_path ) do |form| %>
  <% if flash[:error_log_in] %>
    <div id="error_explanation">
      <h2><%= flash[:error_log_in] %></h2>
    </div>
  <% end %>

  <div class="form-group-lg row text">
    <%= form.label :login %>
    <%= form.text_field :login %>
  </div>

  <div class="form-group-lg row text">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="form-group-lg row text">
    <%= form.submit "Log in", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>


<p class="text"> New user? <%= link_to 'Sign up', main_new_path %></p>
