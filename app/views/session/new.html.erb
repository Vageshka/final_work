<h1 class="welcome"><%= t("Log in") %></h1>

<%= form_with(url: session_create_path ) do |form| %>
  <% if flash[:error_log_in] %>
    <div id="error_explanation">
      <h2><%= t(flash[:error_log_in]) %></h2>
    </div>
  <% end %>

  <div class="form-group-lg row text">
    <%= form.label t("Login") %>
    <%= form.text_field :login %>
  </div>

  <div class="form-group-lg row text">
    <%= form.label t("Password") %>
    <%= form.password_field :password %>
  </div>

  <div class="form-group-lg row text">
    <%= form.submit t("Log in"), class: "btn btn-primary btn-lg" %>
  </div>
<% end %>


<p class="text"> <%= t("New user?") %> <%= link_to(t('Sign up'), main_new_path) %></p>
